@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Northwind.Web.Pages.fibonacciSequenceModel
<h1>@ViewData["Title"]</h1>
@using (Html.BeginForm())
{
    <label>Enter n</label>
    <input type="text" asp-for ="fibonacciCount"/>
    <br />
    <input type="submit" id="submit"/>
}
<table>
    @{
        if(Model.fibonacciCount is not null)
        {
            int f = 0, s = 0, cur = 1;
            for(int i = 0; i < Model.fibonacciCount; i++)
            {
                <tr><td>@cur</td></tr>
                f = s;
                s = cur;
                cur = s + f;
            }
        }
        else
        {
            <tr><td>No</td></tr>
        }
    }
</table>