@page
@using Packt.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Northwind.Web.Pages.ClientsModel

@functions{

 void RazorFunction()
 {
   //Do Stuff 
 }
}

<div class="row">
    <h1 class="display-3">@ViewData["Title"]</h1>
<table class="table">
    <thead class="thead-inverse">
 <tr>
     <th>Name</th>
     <th>Phone</th>
     <th>Company name</th>
     <th>Country</th>
</tr>

 </thead>
 <tbody>
     @if (Model.Customers is null)
    {
        <tr><td>No customers</td></tr>
    }
    else
    {
        @foreach(Customer c in Model.Customers)
        {
            <tr class="clickable" asp-page="selectedCustomer">
                <td>@c.ContactName</td>
                <td>@c.Phone</td>
                <td>@c.CompanyName</td>
                <td>@c.Country</td>
            </tr>
        }
    }
 </tbody>
</table>
</div>


