@using Packt.Shared;
@model IEnumerable<Product>
@{
    string title = "Products that cost more than" +
                ViewData["MaxPrice"];
    ViewData["Title"] = title;
}
<h2>@title</h2>
@if(Model is null)
{
    <div>No products found</div>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Suppliers's Company Name</th>
                <th>Product Name</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product p in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItemp => p.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItemp => p.Supplier.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItemp => p.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItemp => p.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItemp => p.UnitsInStock)
                    </td>
                </tr>
            }
        </tbody>

    </table>
}